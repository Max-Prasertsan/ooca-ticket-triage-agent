# =============================================================================
# Support Ticket Triage Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Do NOT commit the .env file to version control

# =============================================================================
# REQUIRED: OpenAI Configuration
# =============================================================================

# Your OpenAI API key (required for LLM-based triage)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# =============================================================================
# OPTIONAL: Model Configuration
# =============================================================================

# OpenAI model to use (default: gpt-4o)
# Options: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o

# Temperature for model responses (default: 0.1)
# Lower = more deterministic, Higher = more creative
# Range: 0.0 - 2.0
OPENAI_TEMPERATURE=0.1

# =============================================================================
# OPTIONAL: Application Configuration
# =============================================================================

# Logging level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum API retry attempts (default: 3)
# Range: 1-10
MAX_RETRIES=3

# Request timeout in seconds (default: 30)
# Range: 5-120
TIMEOUT_SECONDS=30

# =============================================================================
# OPTIONAL: Feature Flags
# =============================================================================

# Enable/disable individual tools (default: true for all)
ENABLE_KNOWLEDGE_BASE=true
ENABLE_CUSTOMER_HISTORY=true
ENABLE_REGION_STATUS=true